  }

  .formulario-flutuante {
    display: none;
    position: fixed;
    bottom: 80px;
    right: 30px;
    z-index: 100;
    background-color: #f9f9f9;
    border-radius: 8px;
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    padding: 20px;
    width: 300px;
  }

  .formulario-flutuante input[type="text"],
  .formulario-flutuante input[type="email"],
  .formulario-flutuante textarea {
    border: 1px solid #ddd;
    border-radius: 4px;
    padding: 10px;
    margin-bottom: 10px;
    width: 100%;
  }

  .formulario-flutuante input[type="submit"] {
    background-color: #5cb85c;
    border: none;
    border-radius: 4px;
    color: white;
    padding: 10px 20px;
    text-transform: uppercase;
    cursor: pointer;
  }

  .formulario-flutuante input[type="text"]:focus,
  .formulario-flutuante input[type="email"]:focus,
  .formulario-flutuante textarea:focus {
